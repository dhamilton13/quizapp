<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quizletclone.MainActivity" >

    <Button
        android:id="@+id/viewFlashcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToViewFlashcards"
        android:text="View Flashcards"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_app_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Tests"
        android:id="@+id/button"
        android:onClick="goToCreateTest"
        android:layout_below="@+id/viewFlashcard"
        android:layout_alignLeft="@+id/viewFlashcard"
        android:layout_alignStart="@+id/viewFlashcard"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/viewFlashcard"
        android:layout_alignEnd="@+id/viewFlashcard"
        android:background="@drawable/custom_app_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Tag"
        android:id="@+id/viewFlashcardByTag"
        android:layout_below="@+id/button"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:onClick="createTag"
        android:background="@drawable/custom_app_button"/>


</RelativeLayout>